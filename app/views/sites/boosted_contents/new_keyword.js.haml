= fields_for "boosted_content[boosted_content_keywords_attributes][#{@index}]" do |f|
  :plain
    jQuery('.form .keywords').append("#{escape_javascript(render('keyword', f: f, keyword: BoostedContentKeyword.new, index: @index))}");
    jQuery('#new-keyword-trigger').data({ params: { index: "#{@index + 1}" } });
    jQuery('.form .keywords input').last().focus();
